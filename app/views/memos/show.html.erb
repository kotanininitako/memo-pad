<div class="col-10 offset-1 bg-light p-4 rounded border mb-3">
  <div class="row">
    <div class="col-10">
      <%= @memo.content %>
    </div>
    <div class="col-2">
      <%= link_to '編集', edit_memo_path(@memo), class: 'btn btn-light' %>
      <%= link_to '削除', @memo, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>

<%= link_to 'メモを追加', new_memo_path, class: "btn btn-primary row col-8 offset-2 mb-3" %>

<% if @memos.any? %>
      <% @memos.each do |memo| %>
        <div class="col-8 offset-2 bg-light p-3 rounded border mb-3">
          <%= link_to memo.id, memo, class: "btn btn-secondary" %><span class="ms-2"><%= memo.content %></span>
        </div>
      <% end %>
  <div class="pagination justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
